# 1) Imagen base de Python
FROM python:3.13-slim

# 2) Evitar pycaches y buffering
ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1

# 3) Instalar dependencias del sistema para el cliente MySQL
RUN apt-get update \
    && apt-get install -y --no-install-recommends \
       default-libmysqlclient-dev build-essential \
    && rm -rf /var/lib/apt/lists/*

# 4) Crear directorio de trabajo
WORKDIR /app

# 5) Copiar requirements.txt e instalar pip-deps
COPY requirements.txt .
RUN pip install --upgrade pip \
    && pip install -r requirements.txt

# 6) Copiar el resto del código
COPY . .

# 7) Ejecutar migraciones y colectar estáticos (opcional)
RUN python manage.py migrate --noinput
RUN python manage.py collectstatic --noinput

# 8) Puertos y comando por defecto
EXPOSE 8000
CMD ["gunicorn", "app.wsgi:application", "--bind", "0.0.0.0:8000"]
